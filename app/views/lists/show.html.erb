<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/9542437);">
  <div class="btn-movies btn btn-warning"><%= @list.bookmarks.size %> movies</div>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-end mb-2">
    <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src=<%= bookmark.movie.poster_url %> />
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
            <small><%= bookmark.comment %></small>
          </div>
          <h2 class="card-trip-pricing"><%= link_to 'Borrar', bookmark_path(bookmark), method: :delete %></h2>
        </div>
      </div>
    <% end %>
  </div>


</div>
